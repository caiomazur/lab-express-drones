<h2>Available drones</h2>
{{#each drones}}

  <div>
    <h3>{{name}}</h3>
    <p>Number of propellers: {{propellers}}</p>
    <p>Max Speed: {{maxSpeed}}</p>
    <a href="/drones/{{_id}}"><button>See Details</button> </a>
    {{! Compass always tags the id as _id }}
    <a href="/drones/{{_id}}/edit"><button>Edit Drone</button></a>

    <form action="/drones/{{_id}}/delete" method="post">
      <button type="submit">Delete Drone</button>
    </form>

  </div>
  <hr />

{{/each}}